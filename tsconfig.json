{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ESNext"],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true
  }
}
